<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradientbackground"
    tools:context="com.example.back4app.barbershopapp.Tab2Profile">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <LinearLayout
            android:background="@drawable/product_logo_144dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="250dp">

            <ImageView
                android:id="@+id/photo"
                android:layout_marginTop="35dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/ic_account_circle_black_24dp" />
        </LinearLayout>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="@color/endgrey"
            card_view:cardCornerRadius="18dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="185dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginLeft="27dp"
                    android:layout_marginStart="27dp"
                    android:layout_marginRight="27dp"
                    android:layout_marginEnd="27dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_person_black_24dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginStart="12dp"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:text="@string/username"/>

                    <TextView
                        android:id="@+id/username"
                        android:layout_width="fill_parent"
                        android:layout_marginLeft="12dp"
                        android:layout_marginStart="12dp"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/light_yellow"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="27dp"
                    android:layout_marginStart="27dp"
                    android:layout_marginRight="27dp"
                    android:layout_marginEnd="27dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_email_black_24dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginStart="12dp"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:text="@string/email"/>

                    <TextView
                        android:id="@+id/user_email"
                        android:layout_width="fill_parent"
                        android:layout_marginLeft="12dp"
                        android:layout_marginStart="12dp"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/light_yellow"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="25dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/appointments_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="75dp"
                android:layout_marginStart="75dp"
                android:src="@drawable/ic_schedule_black_24dp" />

            <TextView
                android:id="@+id/appointments_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"
                android:text="@string/my_appointments"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="40dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/visits_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="75dp"
                android:layout_marginStart="75dp"
                android:src="@drawable/barber_icon" />

            <TextView
                android:id="@+id/visits_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"
                android:text="@string/my_visits"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
